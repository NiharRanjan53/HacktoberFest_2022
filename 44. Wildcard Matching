class Solution {
public:

    
    bool isMatch(string s, string p) {
        int n = s.length();
        int m = p.length();
        int dp[n+1][m+1];
        memset(dp,0,sizeof(dp));
        dp[0][0] = true;
        for(int i = 0;i<=m;i++){
            int ans = true;
            for(int j =0;j<i;j++){
                if(p[j]!='*') ans = false;
            }
            dp[0][i] = ans;
        }
        for(int i = 1;i<=n;i++){
            for(int j=1;j<=m;j++){
                if(s[i-1]==p[j-1]){
                    dp[i][j] = dp[i-1][j-1];
                }else{
                    if(p[j-1]=='?'){
                         dp[i][j] = dp[i-1][j-1];
                    }else if(p[j-1]=='*'){
                         dp[i][j] = dp[i-1][j] || dp[i][j-1];
                    }else dp[i][j] = false;
                }
            }
        }
        return dp[n][m];
    }
};
